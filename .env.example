# ============================================
# Expense Tracker MCP Server - Environment Configuration
# ============================================
# Copy this file to .env and customize for your environment

# Deployment Environment
MCP_ENV=local                          # "local" or "production"

# Transport Configuration
MCP_TRANSPORT=stdio                    # "stdio" (local), "sse" (cloud), "http" (custom)
MCP_HOST=localhost                     # "localhost" (local) or "0.0.0.0" (cloud)
MCP_PORT=5000                          # Port number (ignored for stdio)

# Database Configuration
DB_ENABLE_WAL=true                     # Enable WAL mode for concurrency

# Logging
ENABLE_LOGGING=true                    # Set to false in production
LOG_LEVEL=INFO                         # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
ALLOWED_ORIGINS=*                      # Restrict in production (e.g., https://your-domain.com)

# ============================================
# DEPLOYMENT PROFILES
# ============================================

# Profile 1: LOCAL (Claude Desktop)
# MCP_ENV=local
# MCP_TRANSPORT=stdio
# MCP_HOST=localhost
# MCP_PORT=5000
# ENABLE_LOGGING=true

# Profile 2: PRODUCTION (Cloud - Render/Railway)
# MCP_ENV=production
# MCP_TRANSPORT=sse
# MCP_HOST=0.0.0.0
# MCP_PORT=8000
# ENABLE_LOGGING=false
# LOG_LEVEL=WARNING
# ALLOWED_ORIGINS=https://your-domain.com

# Profile 3: DOCKER (Local Container)
# MCP_ENV=production
# MCP_TRANSPORT=sse
# MCP_HOST=0.0.0.0
# MCP_PORT=8000
# DB_ENABLE_WAL=true
# ENABLE_LOGGING=false
